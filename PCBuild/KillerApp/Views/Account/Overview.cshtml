@using System.Security.Claims
@model AccountOverviewModel

@{
    ViewData["Title"] = "Overview";
}

<div class="navbar navbar-inverse">
    @if (User.Identity.IsAuthenticated)
    {
        var claimsIdentity = User.Identity as ClaimsIdentity;
        if (claimsIdentity != null)
        {
            var name = claimsIdentity.FindFirst("Username").Value;
            <div class="second-nav">
                <h2>@name.ToUpper()</h2>
            </div>
        }
    }
    else
    {
        <div class="second-nav">
            <h2>kan geen username vinden</h2>
        </div>
    }
</div>
<div class="navbar navbar-default">
    <div class="navbar-collapse collapse a-nav-middle-wrapper">
        <div class="a-nav-middle">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    var claimsIdentity = User.Identity as ClaimsIdentity;
                    if (claimsIdentity.FindFirst("moderator").Value == "true")
                    {
                        <li>
                            <a class="hvr-underline-from-center-selected" asp-area="" asp-controller="PcBuild" asp-action="Add">ADD PC-PARTS</a>
                        </li>
                    }
                }
                <li>
                    <a class="hvr-underline-from-center-selected" asp-area="" asp-controller="PcBuild" asp-action="Index">EIGEN BUILDS</a>
                </li>
                <li>
                    <a class="hvr-underline-from-center" asp-area="" asp-controller="Home" asp-action="About">GELIKETE BUILDS</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        @foreach (var build in Model.Builds)
        {
            <div class="col-sm-4">
                <div class="PCWrapper PCWrapper-White">
                    <div class="PCWrapper-TextContainer">
                        <h3>Parts:</h3>
                        @foreach (var part in build.PartNames)
                        {
                            <p>@part._Name</p>
                        }
                    </div>
                    <div class="PCWrapper-Title">
                        <a>@build._Name.ToUpper()</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>