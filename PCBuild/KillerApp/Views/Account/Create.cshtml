@model  CreateAccountViewModel

@{
    ViewData["Title"] = "Create";
}
@Html.AntiForgeryToken();
<div class="form-container">
    <h2>Account aanmaken</h2>
    <form id="AccountForm" asp-action="SendAccount" method="post" class="form-wrapper">
        <p>Accountnaam: </p>
        <input asp-for="Account.UserName" type="text" class="form-control"/>
        <p id="usernameError" class="error-field">Deze gebruikersnaam is al in gebruik.</p>
        <br/>
        <p>Wachtwoord: </p>
        <input asp-for="Account.Password" type="password" class="form-control"/>
        <br/>
        <p>Wachtwoord herhalen: </p>
        <input asp-for="Account.ConfPassword" type="password" class="form-control"/>
        @Html.ValidationSummary(true)
        <br/>
        <button class="btn btn-1 btn-1e" type="submit">
            <span>Create</span>
        </button>
    </form>
</div>