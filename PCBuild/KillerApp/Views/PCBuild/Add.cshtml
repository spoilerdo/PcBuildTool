@model PcBuildAddViewModel
@{
    ViewData["Title"] = "Add";
}
<div class="form-container">
    <h2>PC part toevoegen</h2>
    <div class="form-wrapper">
        <p>Naam:</p>
        <input id="PartName" type="text" class="form-control"/>
        <br/>
        <p >Type:</p>
        <div class="form-select">
            <select id="Type-select" name="my-select[]">
                @foreach (var type in Model.AllTypes)
                {
                    <option value="@type">@type</option>
                }
            </select>
        </div>
        <br/>
        <p>Informatie:</p>
        <input id="PartInfo" type="text" class="form-control"/>
        <br/>
        <p>Eigenschappen:</p>
        <div class="form-select">
            <select multiple="multiple" id="Propertie-select" name="my-select[]">
                <!--You can ad some optgroups on the hand of the prop types-->
                @foreach (var prop in Model.AllProperties)
                {
                    <option value="@prop.Id">@prop._Value</option>
                }
            </select>
        </div>
        <br/>
        <p>Afbeelding:</p>
        <input type="file" id="PartImage" class="inputfile inputfile-1" data-multiple-caption="{count} files selected" multiple/>
        <label for="PartImage">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
            </svg> <span>Choose a file&hellip;</span>
        </label>
        <br/>
        <button class="btn btn-1 btn-1e" id="AddPcPart" type="submit">
            <span>Add</span>
        </button>
    </div>
</div>